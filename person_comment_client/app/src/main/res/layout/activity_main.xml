                <!--android:drawableTop="@drawable/main_search_selector"-->
                <!--android:textColor="@drawable/main_color_selector"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="发现"/>-->
            <RadioButton
                android:id="@+id/main_me"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:paddingLeft="0dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:drawablePadding="@dimen/little_space"
                android:drawableTop="@drawable/main_me_selector"
                android:textColor="@drawable/main_color_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"/>
        </RadioGroup>

</LinearLayout>
