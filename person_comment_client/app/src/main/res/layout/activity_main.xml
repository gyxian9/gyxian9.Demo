<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>

        <RadioGroup
            android:orientation="horizontal"
            android:id="@+id/main_bottom_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/main_home"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:paddingLeft="0dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:drawablePadding="@dimen/little_space"
                android:drawableTop="@drawable/main_home_selector"
                android:textColor="@drawable/main_color_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"/>
            <RadioButton
                android:id="@+id/main_tuangou"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:paddingLeft="0dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:drawablePadding="@dimen/little_space"
                android:drawableTop="@drawable/main_tuangou_selector"
                android:textColor="@drawable/main_color_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="团购"/>
