<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg_color">
    <LinearLayout
        android:id="@+id/login_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
      <LinearLayout
          android:padding="@dimen/normal_space"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/white"
          android:orientation="horizontal">

          <ImageView
              android:id="@+id/login_back"
              android:layout_gravity="center_vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:contentDescription="@null"
              android:src="@mipmap/ic_back_u"/>

          <TextView
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center_horizontal"
              android:text="登陆"
              android:padding="@dimen/normal_space"
              android:textSize="@dimen/title_text_size"
              />
          <TextView
              android:id="@+id/login_zhuce"
              android:padding="@dimen/normal_space"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="注册"
              android:gravity="center_horizontal"
              android:textColor="@color/normal_orange_color"/>

      </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/normal_space"
            android:background="@color/normal_orange_color"/>
        <EditText
            android:id="@+id/login_username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_input_height"
            android:background="@mipmap/mini_block_item_normal"
            android:drawableLeft="@mipmap/login_user"
            android:drawablePadding="@dimen/normal_space"
            android:hint="邮箱/手机号/用户名"
            android:inputType="text"
            android:singleLine="true"
            android:paddingLeft="@dimen/normal_space"
            />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_input_height"
            android:background="@mipmap/mini_block_item_normal"
            android:drawableLeft="@mipmap/login_password"
            android:drawablePadding="@dimen/normal_space"
            android:inputType="textPassword"
            android:singleLine="true"
            android:paddingLeft="@dimen/normal_space"
            android:hint="密码"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_input_height"
            android:background="@mipmap/mini_block_item_normal"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/login_et_yanzhengma"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/login_ver"
                android:hint="验证码"
                android:inputType="text"
                android:singleLine="true"
                android:background="@null"
                android:paddingLeft="@dimen/normal_space"
                android:drawablePadding="@dimen/normal_space"
                />

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/normal_bg_color"/>

            <Button
                android:id="@+id/login_btn_yanzhengma"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="1234"
                android:textColor="@color/normal_orange_color"
                android:textSize="@dimen/title_text_size"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登陆"
        android:textSize="@dimen/text_size_defalut"
        android:textColor="@color/white"
        android:layout_below="@id/login_tab"
        android:layout_margin="@dimen/normal_space"
        android:background="@drawable/my_btn_selector"
        android:padding="@dimen/little_space"
        />

    <RelativeLayout
        android:id="@+id/my_bottom_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/special9"
        android:paddingBottom="@dimen/big_space"
        android:paddingTop="@dimen/big_space">

        <TextView
            android:id="@+id/weixin_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信登陆"
            android:drawableLeft="@mipmap/weixin_btn"
            android:drawablePadding="@dimen/little_space"
            android:gravity="center_vertical"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:layout_marginLeft="24dp"
            android:textSize="@dimen/text_size_defalut"/>

        <TextView
            android:id="@+id/qq_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QQ登陆"
            android:textSize="@dimen/text_size_defalut"
            android:gravity="center_vertical"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:drawableLeft="@mipmap/qq_btn"
            android:drawablePadding="@dimen/little_space"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="36dp"
            />
    </RelativeLayout>

</RelativeLayout>
