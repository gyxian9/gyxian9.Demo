<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/normal_bg_color"
        >


        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的"
            android:textColor="@color/white"
            android:padding="@dimen/normal_space"
            android:textSize="@dimen/title_text_size"
            android:background="@color/normal_orange_color"
            android:gravity="center_horizontal"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            >
            <ImageView
                android:id="@+id/my_index_user_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/portrait_def"/>
            <TextView
                android:id="@+id/my_index_login_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/my_index_user_image"
                android:text="点击登录"
                android:textSize="@dimen/text_size_defalut"
                android:paddingLeft="@dimen/little_space"
                android:layout_centerVertical="true"
                android:drawableRight="@mipmap/arrow_normal"/>
        </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/normal_space">

        <TextView
            android:id="@+id/my_index_my_dianping1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@mipmap/my_dianping_user_icon_normal"
            android:text="我的点评"
            />
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/normal_bg_color"/>
        <TextView
            android:id="@+id/my_index_my_dianping2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@mipmap/my_collect_user_icon_normal"
            android:text="我的点评"
            />
        <TextView
            android:id="@+id/my_index_my_dianping3"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/normal_bg_color"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@mipmap/my_coupon_user_icon_normal"
            android:text="我的点评"
            />
    </LinearLayout>
        <TextView
            android:id="@+id/my_index_my_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_space"
            android:text="我的订单"
            android:drawableLeft="@mipmap/my_order_user_icon_normal"
            android:drawableRight="@mipmap/arrow_normal"
            android:drawablePadding="@dimen/normal_space"
            android:gravity="center_vertical"
            android:padding="@dimen/normal_space"
            android:background="@color/white"
            />
        <TextView
            android:id="@+id/my_index_my_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_space"
            android:text="我的钱包"
            android:drawableLeft="@mipmap/my_wallet_user_icon_normal"
            android:drawableRight="@mipmap/arrow_normal"
            android:drawablePadding="@dimen/normal_space"
            android:gravity="center_vertical"
            android:padding="@dimen/normal_space"
            android:background="@color/white"
            />
        <TextView
            android:id="@+id/my_index_no_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_space"
            android:text="待点评"
            android:drawableLeft="@mipmap/my_review_user_icon_normal"
            android:drawableRight="@mipmap/arrow_normal"
            android:drawablePadding="@dimen/normal_space"
            android:gravity="center_vertical"
            android:padding="@dimen/normal_space"
            android:background="@color/white"
            />
        <TextView
            android:id="@+id/my_index_daily_recommened"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_space"
            android:text="每日推荐"
            android:drawableLeft="@mipmap/my_day_recommend_user_icon_normal"
            android:drawableRight="@mipmap/arrow_normal"
            android:drawablePadding="@dimen/normal_space"
            android:gravity="center_vertical"
            android:padding="@dimen/normal_space"
            android:background="@color/white"
            />
        <TextView
            android:id="@+id/my_index_recent_visit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_space"
            android:text="最近浏览"
            android:drawableLeft="@mipmap/my_history_user_icon_normal"
            android:drawableRight="@mipmap/arrow_normal"
            android:drawablePadding="@dimen/normal_space"
            android:gravity="center_vertical"
            android:padding="@dimen/normal_space"
            android:background="@color/white"
            />
        <TextView
            android:id="@+id/my_index_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_space"
            android:text="设置"
            android:drawableLeft="@mipmap/my_setting_user_icon_normal"
            android:drawableRight="@mipmap/arrow_normal"
            android:drawablePadding="@dimen/normal_space"
            android:gravity="center_vertical"
            android:padding="@dimen/normal_space"
            android:background="@color/white"
            android:layout_marginBottom="40dp"
            />
    </LinearLayout>
</ScrollView>